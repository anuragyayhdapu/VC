<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="OzVideoViewerWPF"
        xmlns:local="clr-namespace:VC"
        xmlns:convertor="clr-namespace:ValueConverter"
        x:Class="VC.MainWindow"
        Title="Boom"
        Height="550"
        Width="900"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <convertor:PresenceStatusToColorConvertor x:Key="PresenceStatusToColorConvertor"/>
    </Window.Resources>
    
    <Grid Margin="5">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0">
            <Grid x:Name="SettingsGrid"
                  Grid.Column="0"
                  Margin="0, 0, 10, 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid x:Name="AccountSettings"
                      Grid.Row="0"
                      Margin="0, 0, 0, 5">
                    <GroupBox Header="Account">
                        <Grid Margin="5, 10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   Content="Name :" />
                            <TextBox Height="25"
                                     VerticalContentAlignment="Center"
                                     Grid.Row="0"
                                     Grid.Column="1"
                                     x:Name="DisplayNameText"
                                     Text="221" />
                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   Content="Number :" />
                            <TextBox Height="25"
                                     VerticalContentAlignment="Center"
                                     Grid.Row="1"
                                     Grid.Column="1"
                                     x:Name="UserNameText"
                                     Text="12100221" />
                            <Label Grid.Row="2"
                                   Grid.Column="0"
                                   Content="Password :" />
                            <PasswordBox Height="25"
                                         VerticalContentAlignment="Center"
                                         Grid.Row="2"
                                         Grid.Column="1"
                                         x:Name="PasswordText"
                                         Password="221" />
                            <Button Content="Register"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Height="25"
                                    Width="70"
                                    HorizontalAlignment="Left"
                                    Click="SipRegistrationButton_Click" />
                            <Button Content="Unregister"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Height="25"
                                    Width="70"
                                    HorizontalAlignment="Right"
                                    Click="SipUnregistrationButton_Click" />
                            <Label Grid.Row="4"
                                   Grid.Column="0"
                                   Height="25"
                                   Content="Phone State :" />
                            <TextBox Grid.Row="4"
                                     Grid.Column="1"
                                     Height="25"
                                     x:Name="PhoneLineStateText"
                                     DataContext="local"
                                     Text="{Binding SoftPhoneLineState}"
                                     IsReadOnly="True"
                                     VerticalContentAlignment="Center" />
                            <Label Content="Online State :"
                                   Grid.Row="5"
                                   Grid.Column="0" />
                            <TextBox x:Name="PresenceStateText"
                                     Height="25"
                                     IsReadOnly="True"
                                     Grid.Column="1"
                                     Grid.Row="5" />
                        </Grid>

                    </GroupBox>
                </Grid>

                <Grid x:Name="ConferenceRoomSettings"
                      Grid.Row="1"
                      Margin="0, 5">
                    <GroupBox Header="Conference Room">
                        <Grid Margin="5, 10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Content="Room :"
                                   Grid.Row="0"
                                   Grid.Column="0" />
                            <TextBox Grid.Column="1"
                                     Grid.Row="0"
                                     Height="25"
                                     x:Name="DialToCallText"
                                     Text="4545" />
                            <Label Content="Password :"
                                   Grid.Row="1"
                                   Grid.Column="0" />
                            <PasswordBox Grid.Column="1"
                                         Grid.Row="1"
                                         Height="25"
                                         x:Name="RoomPassword"
                                         Password="4321#" />
                            <Button Grid.Column="1"
                                    Content="Call"
                                    Grid.Row="2"
                                    Height="25"
                                    Click="CallButton_Click"
                                    HorizontalAlignment="Left"
                                    Width="70" />
                            <Button Content="Hang up"
                                    Click="CallHangUpButton_Click"
                                    Margin="52,2,0,2"
                                    Grid.Column="1"
                                    Grid.Row="2"
                                    Height="25"
                                    HorizontalAlignment="Right"
                                    Width="70" />
                            <Label Content="Call State :"
                                   Grid.Row="3"
                                   Grid.Column="0" />
                            <TextBox x:Name="CallStateText"
                                     Height="25"
                                     IsReadOnly="True"
                                     Grid.Column="1"
                                     Grid.Row="3" />
                        </Grid>
                    </GroupBox>
                </Grid>

                <Grid x:Name="PrivacySettings"
                      Grid.Row="2"
                      Margin="0, 5">
                    <GroupBox Header="Privacy">
                        <Grid Margin="5, 10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>
                            <CheckBox Content="Video"
                                      Grid.Row="0"
                                      Height="25"
                                      x:Name="VideoFeedToggle"
                                      IsChecked="True"
                                      Click="VideoFeedToggle_Checked"/>
                            <CheckBox Content="Mic"
                                      Grid.Row="1"
                                      Height="25"
                                      x:Name="MicToggle"
                                      IsChecked="True"
                                      Click="MicToggle_Checked"/>
                            <CheckBox Content="Speaker"
                                      Grid.Row="2"
                                      Height="25"
                                      x:Name="SpeakerToggle"
                                      IsChecked="True" 
                                      Click="SpeakerToggle_Checked"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Grid>
        </ScrollViewer>

        <Grid Grid.Column="1"
              Margin="10, 0, 0, 0">
            <GroupBox Header="Video">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <GroupBox Header="Members"
                                      Margin="10, 10, 10, 0">
                                <ListView x:Name="MembersListView"
                                          Height="118">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <WrapPanel>
                                                <TextBlock Text="{Binding ContactNickName}" />
                                                <TextBlock Text=" (" />
                                                <TextBlock Text="{Binding PresenceStatus}"
                                                           Foreground="{Binding PresenceStatus, Converter={StaticResource PresenceStatusToColorConvertor}}"/>
                                                <TextBlock Text=")" />
                                            </WrapPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </GroupBox>
                        </Grid>
                        <Grid Grid.Column="1">
                            <GroupBox Header="You"
                                      Width="250"
                                      Height="147"
                                      Margin="0, 10, 30, 0">
                                <Controls:VideoViewerWPF Name="videoViewer"
                                                         Background="Black"
                                                         Margin="10" />
                            </GroupBox>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1">
                        <GroupBox Header="Speaker"
                                  Width="550"
                                  Height="294"
                                  VerticalAlignment="Bottom"
                                  Margin="10, 10, 10, 40">
                            <Controls:VideoViewerWPF Name="videoViewerReciever"
                                                     Background="Black"
                                                     Margin="10" />
                        </GroupBox>
                    </Grid>
                </Grid>
            </GroupBox>
        </Grid>

    </Grid>
</Window>
